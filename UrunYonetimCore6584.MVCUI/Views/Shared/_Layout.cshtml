<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UrunYonetimCore6584.MVCUI</title>
    <meta name="keywords" content="buraya siteyle alakalı anahtar kelimeler aralarına virgül, konularak eklenir" />
    <meta name="description" content="Burası site açıklama alanı google vb arama motorları için" />
    <link rel="shortcut icon" href="/famm/images/favicon.png" type="">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- bootstrap core css 
    <link rel="stylesheet" type="text/css" href="css/bootstrap.css" />
    -->
    <link rel="stylesheet" href="~/famm/css/font-awesome.min.css" />
    <link rel="stylesheet" href="~/famm/css/style.css" />
    <!-- responsive style -->
    <link href="/famm/css/responsive.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <img width="250" src="~/famm/images/logo.png" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Anasayfa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Products" asp-action="Index">Tüm Ürünlerimiz</a>
                        </li>
                        @await Component.InvokeAsync("Categories")
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="ContactUs">İletişim</a>
                        </li>
                    </ul>
                    <form asp-controller="Products" asp-action="Search" method="get" class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3" role="search">
                        <input name="q" type="search" class="form-control form-control-dark text-bg-dark m-0" placeholder="Ürün ara..." aria-label="Search">
                    </form>
                    <div class="text-end">
                        <button type="button" class="btn btn-outline-primary me-2">Giriş</button>
                        <button type="button" class="btn btn-warning">Kayıt</button>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        @Html.Raw(TempData["Message"])
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <!-- subscribe section -->
    <section class="subscribe_section">
        <div class="container-fuild">
            <div class="box">
                <div class="row">
                    <div class="col-md-6 offset-md-3">
                        <div class="subscribe_form ">
                            <div class="heading_container heading_center">
                                <h3>İndirimlerimizi Takip Edin</h3>
                            </div>
                            <p>Sitemizdeki ürünlerle alakalı indirimleri kaçırmamak için e mail adresinizle abone olabilirsiniz..</p>
                            <form action="">
                                <input type="email" placeholder="E mail adresinizi giriniz">
                                <button>
                                    Abone Ol
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- end subscribe section -->
    <!-- footer start -->
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <div class="full">
                        <div class="logo_footer">
                            <a href="#"><img width="210" src="/famm/images/logo.png" alt="#" /></a>
                        </div>
                        <div class="information_f">
                            <p><strong>ADDRESS:</strong> 28 White tower, Street Name New York City, USA</p>
                            <p><strong>TELEPHONE:</strong> +91 987 654 3210</p>
                            <p><strong>EMAIL:</strong> yourmain@gmail.com</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="row">
                        <div class="col-md-7">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="widget_menu">
                                        <h3>Menu</h3>
                                        <ul>
                                            <li><a href="/">Anasayfa</a></li>
                                            <li><a href="#">Hakkımızda</a></li>
                                            <li><a href="#">Ürünlerimiz</a></li>
                                            <li><a href="#">Müşteri Görüşleri</a></li>
                                            <li><a href="#">Blog</a></li>
                                            <li><a href="#">İletişim</a></li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="widget_menu">
                                        <h3>Hesap</h3>
                                        <ul>
                                            <li><a href="#">Hesabım</a></li>
                                            <li><a href="#">Ödeme</a></li>
                                            <li><a href="#">Giriş</a></li>
                                            <li><a href="#">Kayıt</a></li>
                                            <li><a href="#">Sepet</a></li>
                                            <li><a href="#">Havale/Eft</a></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-5">
                            <div class="widget_menu">
                                <h3>E Bülten</h3>
                                <div class="information_f">
                                    <p>E bülten üyemiz olun fırsatlardan yararlanın.</p>
                                </div>
                                <div class="form_sub">
                                    <form>
                                        <fieldset>
                                            <div class="field">
                                                <input type="email" placeholder="E Mail Adresiniz" name="email" />
                                                <input type="submit" value="Abone Ol" />
                                            </div>
                                        </fieldset>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <!-- footer end -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
